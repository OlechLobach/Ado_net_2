<Window x:Class="Ado_net_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warehouse Database" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10" FontSize="20" FontWeight="Bold" Text="Warehouse Database" />

        <DataGrid x:Name="dgProducts" Grid.Row="1" AutoGenerateColumns="True" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add Product" Margin="5" Click="AddProduct_Click" />
            <Button Content="Update Product" Margin="5" Click="UpdateProduct_Click" />
            <Button Content="Delete Product" Margin="5" Click="DeleteProduct_Click" />
            <Button Content="Show Suppliers Info" Margin="5" Click="ShowSuppliersInfo_Click" />
        </StackPanel>
    </Grid>
</Window>